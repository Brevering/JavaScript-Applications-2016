<fieldset class="row">
  <legend class="col-md-12">Add new Item</legend>
  <div class="col-md-6">
    <div class="form-group">
      <label for="tb-item-text">
        Text:
      </label>
      <input type="text" class="form-control" id="tb-item-text" />
    </div>
    <div class="form-group">
      <label for="tb-item-category">Category:</label>
      <input type="text" id="tb-item-category" class="form-control" />
    </div>
    <div class="form-group">
      <label for="tb-item-img">Image:</label>
      <input type="text" id="tb-item-img" class="form-control" />
    </div>
    <button class="form-control btn btn-primary col-md-12" id="btn-add-item">Add</button>
  </div>
  <img id="item-img-preview" class="col-md-5" />
</fieldset>
